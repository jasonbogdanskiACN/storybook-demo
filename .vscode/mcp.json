{
  // For more information, visit: https://angular.dev/ai/mcp
  "servers": {
    "angular-cli": {
      "command": "npx",
      "args": ["-y", "@angular/cli", "mcp"]
    },
    "primeng": {
      "command": "npx",
      "args": ["-y", "@primeng/mcp"]
    },
    "storybook-mcp": {
      "url": "http://localhost:6006/mcp",
      "type": "http",
      "headers": {
        "X-MCP-Toolsets": "dev"
      }
    }
  }
}
